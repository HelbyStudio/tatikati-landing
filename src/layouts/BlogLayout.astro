---
import BaseLayout from './BaseLayout.astro';
import type { CollectionEntry } from 'astro:content';

export interface Props {
  post: CollectionEntry<'blog'>;
}

const { post } = Astro.props;
const { title, description, pubDate, heroImage } = post.data;

// Format date
const formattedDate = new Intl.DateTimeFormat('fr-FR', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
}).format(pubDate);

// Generate blog-specific title and description
const blogTitle = `${title} | Blog Tatikati`;
const blogDescription = description || `Découvrez ${title} sur le blog Tatikati. Actualités et conseils pour les podcasts enfants.`;
---

<BaseLayout 
  title={blogTitle}
  description={blogDescription}
  image={heroImage}
>
  <main id="main" class="blog-content">
    <div class="container">
      <!-- Back to blog link -->
      <nav aria-label="Navigation du blog" class="blog-nav">
        <a href="/blog" class="back-link">
          <svg width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
            <path d="M10 14L4 8l6-6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
          Retour au blog
        </a>
      </nav>

      <!-- Article Header -->
      <header class="blog-header">
        <h1 class="blog-title">{title}</h1>
        <div class="blog-meta">
          <time datetime={pubDate.toISOString()} class="blog-date">
            {formattedDate}
          </time>
        </div>
      </header>

      <!-- Hero Image -->
      {heroImage && (
        <div class="hero-image-container">
          <img 
            src={heroImage} 
            alt={`Image d'illustration pour ${title}`}
            class="hero-image"
            loading="eager"
          />
        </div>
      )}

      <!-- Article Content -->
      <article class="prose">
        <slot />
      </article>

      <!-- Back to blog CTA -->
      <footer class="blog-footer">
        <a href="/blog" class="btn btn-secondary">
          Voir tous les articles
        </a>
      </footer>
    </div>
  </main>
</BaseLayout>

<style>
  .blog-content {
    padding: var(--space-3xl) 0;
    min-height: 100vh;
  }

  .blog-nav {
    margin-bottom: var(--space-xl);
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-xs);
    color: var(--color-gray-600);
    text-decoration: none;
    font-weight: 500;
    transition: color 0.2s ease;
  }

  .back-link:hover {
    color: var(--color-accent-3);
  }

  .blog-header {
    margin-bottom: var(--space-2xl);
  }

  .blog-title {
    font-family: var(--font-heading);
    font-size: clamp(2rem, 5vw, 3.5rem);
    line-height: 1.1;
    margin-bottom: var(--space-md);
    color: var(--color-fg);
  }

  .blog-meta {
    display: flex;
    align-items: center;
    gap: var(--space-md);
    color: var(--color-gray-600);
    font-size: 0.9rem;
  }

  .blog-date {
    font-weight: 500;
  }

  .hero-image-container {
    margin-bottom: var(--space-2xl);
    border-radius: var(--radius-lg);
    overflow: hidden;
    box-shadow: var(--shadow-soft);
  }

  .hero-image {
    width: 100%;
    height: auto;
    max-height: 400px;
    object-fit: cover;
    display: block;
  }

  .prose {
    max-width: 700px;
    margin-bottom: var(--space-3xl);
    line-height: 1.7;
  }

  .prose :global(h2) {
    font-family: var(--font-heading);
    font-size: clamp(1.5rem, 3vw, 2.25rem);
    margin-top: var(--space-2xl);
    margin-bottom: var(--space-lg);
    color: var(--color-fg);
  }

  .prose :global(h3) {
    font-family: var(--font-heading);
    font-size: clamp(1.25rem, 2.5vw, 1.75rem);
    margin-top: var(--space-xl);
    margin-bottom: var(--space-md);
    color: var(--color-fg);
  }

  .prose :global(p) {
    margin-bottom: var(--space-lg);
    color: var(--color-gray-600);
    font-size: 1.1rem;
  }

  .prose :global(a) {
    color: var(--color-accent-3);
    text-decoration: underline;
    text-underline-offset: 2px;
  }

  .prose :global(a:hover) {
    color: var(--color-accent-1);
  }

  .prose :global(img) {
    width: 100%;
    height: auto;
    border-radius: var(--radius-md);
    margin: var(--space-lg) 0;
    box-shadow: var(--shadow-card);
  }

  .prose :global(blockquote) {
    border-left: 4px solid var(--color-accent-2);
    padding-left: var(--space-lg);
    margin: var(--space-xl) 0;
    font-style: italic;
    color: var(--color-gray-600);
    background: var(--color-gray-50);
    padding: var(--space-lg);
    border-radius: var(--radius-md);
  }

  .prose :global(ul, ol) {
    margin: var(--space-lg) 0;
    padding-left: var(--space-lg);
  }

  .prose :global(li) {
    margin-bottom: var(--space-sm);
    color: var(--color-gray-600);
  }

  .blog-footer {
    text-align: center;
    padding-top: var(--space-2xl);
    border-top: 1px solid var(--color-gray-200);
  }

  @media (min-width: 768px) {
    .blog-content {
      padding: var(--space-4xl) 0;
    }
    
    .hero-image {
      max-height: 500px;
    }
  }
</style>