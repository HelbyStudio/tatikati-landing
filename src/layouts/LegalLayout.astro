---
import BaseLayout from './BaseLayout.astro';
import NavBar from '../components/NavBar.astro';
import Footer from '../components/Footer.astro';
import LastUpdated from '../components/mdx/LastUpdated.astro';

export interface Props {
  frontmatter: {
    title: string;
    description: string;
    lastUpdated: string | Date;
    locale?: string;
  };
}

const { frontmatter } = Astro.props;
const { title, description, lastUpdated, locale } = frontmatter;
---

<BaseLayout 
  title={`${title} | Tatikati`}
  description={description}
>
  
  <main id="main" class="legal-page">
    <div class="container">
      <header class="page-header">
        <h1 class="page-title">{title}</h1>
        <LastUpdated date={lastUpdated} />
      </header>
      
      <div class="content">
        <slot />
      </div>
    </div>
  </main>
  
</BaseLayout>

<style>
  .legal-page {
    min-height: 100vh;
  }

  .page-header {
    text-align: center;
    padding: var(--space-4xl, 3rem) 0;
    background: linear-gradient(135deg, var(--color-bg) 0%, var(--color-gray-25, #f8f9fa) 100%);
    border-radius: var(--radius-2xl, 1.5rem);
    margin-bottom: var(--space-4xl, 3rem);
  }

  .page-title {
    font-family: var(--font-heading);
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 700;
    color: var(--color-fg);
    margin-bottom: var(--space-lg, 1.5rem);
  }

  .content {
    max-width: 800px;
    margin: 0 auto;
    padding-bottom: var(--space-4xl, 3rem);
  }

  /* MDX content styling */
  .content :global(section),
  .content :global(.content-section) {
    margin-bottom: var(--space-3xl, 2.5rem);
    padding: var(--space-2xl, 2rem);
    background: white;
    border-radius: var(--radius-xl, 1rem);
    box-shadow: var(--shadow-card);
    border: 1px solid var(--color-gray-200, #e9ecef);
  }

  .content :global(h2) {
    font-family: var(--font-heading);
    font-size: 1.75rem;
    font-weight: 600;
    color: var(--color-fg);
    margin-bottom: var(--space-lg, 1.5rem);
    padding-bottom: var(--space-sm, 0.5rem);
    border-bottom: 2px solid var(--color-accent-1);
  }

  .content :global(h3) {
    font-family: var(--font-heading);
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-fg);
    margin: var(--space-xl, 2rem) 0 var(--space-md, 1rem) 0;
  }

  .content :global(h4) {
    font-family: var(--font-heading);
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--color-fg);
    margin: var(--space-lg, 1.5rem) 0 var(--space-sm, 0.5rem) 0;
  }

  .content :global(p) {
    color: var(--color-gray-700, #495057);
    line-height: 1.7;
    margin-bottom: var(--space-lg, 1.5rem);
  }

  .content :global(ul),
  .content :global(ol) {
    margin: var(--space-lg, 1.5rem) 0;
    padding-left: var(--space-xl, 2rem);
  }

  .content :global(li) {
    color: var(--color-gray-700, #495057);
    line-height: 1.6;
    margin-bottom: var(--space-sm, 0.5rem);
  }

  .content :global(a) {
    color: var(--color-accent-1);
    text-decoration: underline;
    text-underline-offset: 2px;
    transition: color 0.2s ease;
  }

  .content :global(a:hover) {
    color: var(--color-accent-2);
  }

  .content :global(strong) {
    font-weight: 600;
    color: var(--color-fg);
  }

  .content :global(em) {
    font-style: italic;
  }

  .content :global(hr) {
    border: none;
    border-top: 1px solid var(--color-gray-200, #e9ecef);
    margin: var(--space-2xl, 2rem) 0;
  }

  /* Responsive Design */
  @media (max-width: 767px) {
    .content :global(section),
    .content :global(.content-section) {
      padding: var(--space-xl, 1.5rem);
      margin-bottom: var(--space-xl, 1.5rem);
    }
  }

  /* Print Styles */
  @media print {
    .legal-page {
      padding-top: 0;
    }

    .content :global(section),
    .content :global(.content-section) {
      break-inside: avoid;
      box-shadow: none;
      border: 1px solid #ddd;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Smooth scroll for anchor links
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function (e) {
        e.preventDefault();
        const target = document.querySelector(this.getAttribute('href'));
        if (target) {
          target.scrollIntoView({
            behavior: 'smooth',
            block: 'start'
          });
        }
      });
    });
  });
</script>