---
import '../styles/global.css';
import StructuredData from '../components/StructuredData.astro';
import NavBar from '../components/NavBar.astro';
import Footer from '../components/Footer.astro';
import { getLocaleFromUrl, getAlternateUrls } from '../i18n/utils.js';
import type { Locale } from '../i18n/translations.js';

export interface Props {
  title?: string;
  description?: string;
  image?: string;
  canonical?: string;
  noindex?: boolean;
  structuredDataType?: 'WebSite' | 'MobileApplication' | 'BlogPosting' | 'Organization';
  structuredData?: Record<string, any>;
  locale?: Locale;
}

const {
  title = "Tatikati - Podcasts pour enfants sans écran",
  description = "Découvrez Tatikati, l'app de podcasts spécialement conçue pour les enfants. Écoutez des histoires, documentaires et contenus éducatifs sans écran, avec un mode enfant sécurisé.",
  image = "/images/tatikati-og.jpg",
  canonical,
  noindex = false,
  structuredDataType = 'WebSite',
  structuredData = {},
  locale,
} = Astro.props;

const currentLocale = locale || getLocaleFromUrl(Astro.url.pathname);
const canonicalURL = canonical || new URL(Astro.url.pathname, Astro.site);
const socialImageURL = new URL(image, Astro.site);
const alternateUrls = getAlternateUrls(Astro.url.pathname);
---

<!doctype html>
<html lang={currentLocale}>
  <head>
    <!-- Meta Tags -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- SEO -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />
    {noindex && <meta name="robots" content="noindex" />}
    
    <!-- Alternate Language Links -->
    <link rel="alternate" hreflang="fr" href={new URL(alternateUrls.fr, Astro.site)} />
    <link rel="alternate" hreflang="en" href={new URL(alternateUrls.en, Astro.site)} />
    <link rel="alternate" hreflang="x-default" href={new URL(alternateUrls.fr, Astro.site)} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={socialImageURL} />
    <meta property="og:site_name" content="Tatikati" />
    <meta property="og:locale" content="fr_FR" />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={socialImageURL} />
    
    <!-- Google Fonts - Kalam for handwritten style -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Kalam:wght@300;400;700&display=swap" rel="stylesheet">
    
    <!-- Font Awesome -->
    <script src="https://kit.fontawesome.com/1e9f627911.js" crossorigin="anonymous"></script>
    
    <!-- Structured Data -->
    <StructuredData type={structuredDataType} data={structuredData} />
  </head>
  <body>
  <!-- Navigation -->
  
  <NavBar />
    
    <slot />


  <Footer />
  </body>
</html>