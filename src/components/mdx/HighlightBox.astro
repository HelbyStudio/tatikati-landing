---
interface Props {
  title?: string;
  variant?: 'primary' | 'warning' | 'info';
}

const { title, variant = 'primary' } = Astro.props;
---

<div class={`highlight-box highlight-box--${variant}`}>
  {title && <h4>{title}</h4>}
  <slot />
</div>

<style>
  .highlight-box {
    background-color: var(--color-bg-secondary, #f8f9fa);
    padding: 1.5rem;
    border-radius: var(--radius-md, 0.5rem);
    margin: 1.5rem 0;
  }
  
  .highlight-box--primary {
    background-color: var(--color-bg-secondary, #f8f9fa);
  }
  
  .highlight-box--warning {
    background-color: #fff5f5;
  }
  
  .highlight-box--info {
    background-color: #f0f9ff;
  }

  .highlight-box h4 {
    margin-top: 0;
    margin-bottom: 1rem;
    color: var(--color-text-primary, var(--color-fg));
    font-size: 1.25rem;
    font-weight: 600;
  }

  .highlight-box p,
  .highlight-box li {
    margin: 0.5rem 0;
    color: var(--color-text-secondary, var(--color-gray-600));
    line-height: 1.6;
  }

  .highlight-box p:last-child {
    margin-bottom: 0;
  }

  .highlight-box ul {
    margin: 1rem 0 0 0;
    padding-left: 1.5rem;
  }

  .highlight-box li {
    margin: 0.5rem 0;
    color: var(--color-text-secondary, var(--color-gray-600));
  }

  .highlight-box strong {
    font-weight: 600;
    color: var(--color-text-primary, var(--color-fg));
  }

  .highlight-box em {
    font-style: italic;
  }

  .highlight-box ul ul {
    margin-top: 0.5rem;
  }

  .highlight-box a {
    color: var(--color-accent-3);
    font-weight: 500;
    text-decoration: underline;
    text-underline-offset: 2px;
    transition: opacity 0.2s;
  }

  .highlight-box a:hover {
    opacity: 0.8;
  }
</style>