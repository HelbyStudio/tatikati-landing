---
interface Props {
  id?: string;
}

const { id = 'android-waitlist-popup' } = Astro.props;
---

<div id={id} class="popup-overlay" aria-hidden="true">
  <div class="popup-container">
    <button class="popup-close" aria-label="Fermer">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <line x1="18" y1="6" x2="6" y2="18"></line>
        <line x1="6" y1="6" x2="18" y2="18"></line>
      </svg>
    </button>
    
    <div class="popup-content">
      <h3 class="popup-title">La version Android arrive bientôt !</h3>
      <p class="popup-description">
        Nous travaillons activement sur la version Android de Tatikati. 
        Laissez-nous votre email pour être parmi les premiers informés de sa sortie.
      </p>
      
      <form class="waitlist-form" id="android-waitlist-form">
        <div class="form-group">
          <input 
            type="email" 
            name="email" 
            placeholder="Votre adresse email" 
            required
            class="form-input"
            aria-label="Adresse email"
          />
          <button type="submit" class="btn btn-primary">
            Tenez-moi informé
          </button>
        </div>
        <div class="form-message" id="form-message" aria-live="polite"></div>
      </form>
      
      <p class="popup-note">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M12 2L2 7V12C2 16.5 4.23 20.68 7.62 23.15L12 24L16.38 23.15C19.77 20.68 22 16.5 22 12V7L12 2Z"/>
        </svg>
        Nous respectons votre vie privée. Pas de spam, promis !
      </p>
    </div>
  </div>
</div>

<style>
  .popup-overlay {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(5px);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 9999;
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s ease;
    padding: var(--space-lg);
  }

  .popup-overlay.active {
    opacity: 1;
    visibility: visible;
  }

  .popup-container {
    background: white;
    border-radius: var(--radius-2xl);
    max-width: 520px;
    width: 90%;
    max-height: 90vh;
    overflow-y: auto;
    position: relative;
    transform: translateY(20px);
    transition: transform 0.3s ease;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
  }

  .popup-overlay.active .popup-container {
    transform: translateY(0);
  }

  .popup-close {
    position: absolute;
    top: var(--space-lg);
    right: var(--space-lg);
    background: var(--color-gray-100);
    border: none;
    cursor: pointer;
    color: var(--color-gray-600);
    padding: var(--space-sm);
    transition: all 0.2s ease;
    border-radius: var(--radius-md);
    z-index: 1;
  }

  .popup-close:hover {
    background: var(--color-gray-200);
    color: var(--color-gray-900);
  }

  .popup-content {
    padding: var(--space-3xl) var(--space-3xl) var(--space-2xl);
    text-align: center;
  }


  .popup-title {
    font-family: var(--font-heading);
    font-size: 1.75rem;
    font-weight: 700;
    color: var(--color-fg);
    margin-bottom: var(--space-md);
  }

  .popup-description {
    font-size: 1.05rem;
    line-height: 1.6;
    color: var(--color-gray-600);
    margin-bottom: var(--space-2xl);
  }

  .waitlist-form {
    margin-bottom: var(--space-xl);
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
    margin-bottom: var(--space-md);
  }

  .form-input {
    flex: 1;
    padding: var(--space-md) var(--space-lg);
    border: 2px solid var(--color-gray-300);
    border-radius: var(--radius-lg);
    font-size: 1rem;
    transition: all 0.2s ease;
    background: white;
    color: var(--color-fg);
  }
  
  .form-input::placeholder {
    color: var(--color-gray-500);
  }

  .form-input:focus {
    outline: none;
    border-color: var(--color-accent-1);
    box-shadow: 0 0 0 3px rgba(var(--color-accent-1-rgb), 0.1);
  }


  .form-message {
    min-height: 1.5rem;
    font-size: 0.9rem;
    margin-top: var(--space-sm);
  }

  .form-message.success {
    color: var(--color-accent-4);
  }

  .form-message.error {
    color: #e74c3c;
  }

  .popup-note {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-sm);
    font-size: 0.85rem;
    color: var(--color-gray-500);
    margin: 0;
  }

  .popup-note svg {
    flex-shrink: 0;
  }

  /* Mobile adjustments */
  @media (max-width: 519px) {
    .popup-container {
      width: 95%;
      margin: var(--space-lg);
    }
  
    .popup-content {
      padding: var(--space-2xl) var(--space-lg) var(--space-xl);
    }

    .popup-title {
      font-size: 1.4rem;
      line-height: 1.3;
    }
    
    .popup-description {
      font-size: 0.95rem;
    }
    
    .popup-close {
      top: var(--space-md);
      right: var(--space-md);
    }
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .popup-overlay,
    .popup-container {
      transition: none;
    }

  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const popup = document.getElementById('android-waitlist-popup');
    const closeBtn = popup?.querySelector('.popup-close');
    const form = document.getElementById('android-waitlist-form') as HTMLFormElement;
    const messageDiv = document.getElementById('form-message');
    
    // Function to open popup
    window.openAndroidWaitlist = function() {
      if (popup) {
        popup.classList.add('active');
        popup.setAttribute('aria-hidden', 'false');
        document.body.style.overflow = 'hidden';
        
        // Focus on the close button for accessibility
        setTimeout(() => {
          closeBtn?.focus();
        }, 100);
      }
    };
    
    // Function to close popup
    function closePopup() {
      if (popup) {
        popup.classList.remove('active');
        popup.setAttribute('aria-hidden', 'true');
        document.body.style.overflow = '';
        
        // Clear form and message
        form?.reset();
        if (messageDiv) {
          messageDiv.textContent = '';
          messageDiv.className = 'form-message';
        }
      }
    }
    
    // Close on button click
    closeBtn?.addEventListener('click', closePopup);
    
    // Close on overlay click
    popup?.addEventListener('click', function(e) {
      if (e.target === popup) {
        closePopup();
      }
    });
    
    // Close on Escape key
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape' && popup?.classList.contains('active')) {
        closePopup();
      }
    });
    
    // Handle form submission
    form?.addEventListener('submit', async function(e) {
      e.preventDefault();
      
      const submitBtn = form.querySelector('.btn-primary') as HTMLButtonElement;
      const emailInput = form.querySelector('input[name="email"]') as HTMLInputElement;
      
      if (!emailInput.value) return;
      
      // Disable submit button
      submitBtn.disabled = true;
      submitBtn.textContent = 'Envoi en cours...';
      
      try {
        const response = await fetch('/api/newsletter', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({
            email: emailInput.value,
            listId: 8 // Android waitlist
          }),
        });
        
        if (response.ok) {
          if (messageDiv) {
            messageDiv.textContent = '✅ Parfait ! Vous serez informé dès la sortie sur Android.';
            messageDiv.className = 'form-message success';
          }
          
          // Close popup after 3 seconds
          setTimeout(() => {
            closePopup();
          }, 3000);
        } else {
          throw new Error('Erreur lors de l\'inscription');
        }
      } catch (error) {
        if (messageDiv) {
          messageDiv.textContent = '❌ Une erreur est survenue. Veuillez réessayer.';
          messageDiv.className = 'form-message error';
        }
      } finally {
        // Re-enable submit button
        submitBtn.disabled = false;
        submitBtn.textContent = 'Tenez-moi informé';
      }
    });
  });
  
  // Make openAndroidWaitlist available globally
  declare global {
    interface Window {
      openAndroidWaitlist: () => void;
    }
  }
</script>