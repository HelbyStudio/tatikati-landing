---
interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Restez informés des nouveautés",
  description = "Recevez nos conseils d'experts et découvrez en avant-première les nouveaux podcasts pour enfants."
} = Astro.props;
---

<section class="newsletter-block">
  <div class="container">
    <div class="newsletter-content">
    <div class="newsletter-text">
      <h3 class="newsletter-title">{title}</h3>
      <p class="newsletter-description">{description}</p>
    </div>
    
    <div class="newsletter-form-wrapper">
      <form class="newsletter-form" data-newsletter-form>
        <div class="form-group">
          <label for="newsletter-email-block" class="sr-only">Adresse email</label>
          <input 
            type="email" 
            id="newsletter-email-block"
            name="email"
            placeholder="Votre adresse email"
            class="newsletter-input"
            required
            aria-describedby="email-error-block"
          />
          <button type="submit" class="newsletter-submit">
            <span>S'abonner</span>
            <i class="fa-solid fa-arrow-right" aria-hidden="true"></i>
          </button>
        </div>
        <div id="email-error-block" class="error-message" role="alert" aria-live="polite"></div>
        <p class="newsletter-privacy">
          En vous abonnant, vous acceptez de recevoir nos emails. 
          <a href="/privacy">Politique de confidentialité</a>
        </p>
      </form>
    </div>
  </div>
</div>
</section>

<style>
  .newsletter-block {
    background: linear-gradient(135deg, var(--color-accent-3), var(--color-accent-1));
    border-radius: var(--radius-2xl);
    padding: var(--space-3xl) 0;
    color: white;
    margin: var(--space-4xl) 0;
  }

  .newsletter-block .container {
    padding-left: 0;
  }

  .newsletter-content {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-3xl);
    align-items: flex-start;
    text-align: left;
  }

  .newsletter-title {
    font-family: var(--font-heading);
    font-size: clamp(1.5rem, 3vw, 2rem);
    font-weight: 700;
    margin-bottom: var(--space-md);
    color: white;
    text-align: left;
    margin-left: 0;
    margin-right: auto;
  }

  .newsletter-description {
    font-size: 1.1rem;
    line-height: 1.6;
    color: rgba(255, 255, 255, 0.9);
    margin-bottom: var(--space-xl);
    text-align: left;
    margin-left: 0;
    margin-right: auto;
  }

  .newsletter-form-wrapper {
    display: flex;
    justify-content: flex-start;
    align-items: flex-start;
  }

  .newsletter-form {
    width: 100%;
  }

  .form-group {
    display: flex;
    gap: 0;
    border-radius: var(--radius-lg);
    overflow: hidden;
    box-shadow: var(--shadow-soft);
    max-width: 450px;
    margin: 0 0 var(--space-md) 0;
  }

  .newsletter-input {
    flex: 1;
    padding: var(--space-lg);
    border: none;
    background: white;
    font-size: 1rem;
    color: var(--color-fg);
  }

  .newsletter-input:focus {
    outline: none;
    box-shadow: inset 0 0 0 2px var(--color-accent-2);
  }

  .newsletter-input::placeholder {
    color: var(--color-gray-500);
  }

  .newsletter-submit {
    padding: var(--space-lg) var(--space-xl);
    background: #F7661B;
    color: white;
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    font-weight: 600;
    transition: background 0.2s ease;
  }

  .newsletter-submit:hover {
    background: #e55a18;
  }

  .newsletter-submit i {
    font-size: 16px;
  }

  .newsletter-privacy {
    font-size: 0.85rem;
    color: rgba(255, 255, 255, 0.8);
    margin-top: var(--space-sm);
  }

  .newsletter-privacy a {
    color: rgba(255, 255, 255, 0.9);
    text-decoration: underline;
  }

  .error-message {
    margin-top: var(--space-sm);
    color: #ffcccb;
    font-size: 0.9rem;
    display: none;
  }

  /* Responsive Design */
  @media (min-width: 768px) {
    .newsletter-content {
      grid-template-columns: 1fr 1fr;
      text-align: left;
      align-items: flex-start;
      justify-items: start;
    }

    .newsletter-text {
      padding-right: var(--space-xl);
      padding-left: var(--space-xl);
      margin: 0;
      text-align: left;
      justify-self: start;
    }

    .newsletter-form-wrapper {
      justify-content: flex-start;
      align-items: flex-start;
    }
  }

  @media (max-width: 767px) {
    .newsletter-block {
      padding: var(--space-2xl) 0;
    }

    .newsletter-content {
      text-align: center;
    }

    .newsletter-form-wrapper {
      justify-content: center;
    }

    .form-group {
      flex-direction: column;
      max-width: 100%;
      margin: 0 auto var(--space-md);
    }

    .newsletter-submit {
      justify-content: center;
    }
  }

  /* Screen Reader Only */
  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }
</style>

<script>
  import { initNewsletterHandler } from '../scripts/newsletterHandler.js';
  
  document.addEventListener('DOMContentLoaded', function() {
    initNewsletterHandler('[data-newsletter-form]');
  });
</script>