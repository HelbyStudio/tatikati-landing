  </main>
  
  <Footer locale="en" />
</BaseLayout>

<style>
  .legal-page {
    padding-top: 80px;
    min-height: 100vh;
  }

  .page-header {
    text-align: center;
    margin-bottom: var(--space-4xl);
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
    padding: var(--space-3xl) 0;
  }

  .page-title {
    font-family: var(--font-heading);
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 700;
    color: var(--color-fg);
    margin-bottom: var(--space-lg);
    line-height: 1.1;
  }

  .page-subtitle {
    font-size: clamp(1.1rem, 2.5vw, 1.3rem);
    color: var(--color-gray-600);
    line-height: 1.6;
    margin-bottom: var(--space-xl);
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .last-updated {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    padding: var(--space-sm) var(--space-lg);
    background: var(--color-accent-1-light);
    border: 1px solid var(--color-accent-1);
    border-radius: var(--radius-full);
    font-size: 0.9rem;
    font-weight: 500;
    color: var(--color-accent-1);
  }

  .content {
    max-width: 900px;
    margin: 0 auto;
  }

  .content-section {
    margin-bottom: var(--space-4xl);
    padding: var(--space-3xl);
    background: white;
    border-radius: var(--radius-2xl);
    box-shadow: var(--shadow-card);
    border: 1px solid var(--color-gray-200);
  }

  .content-section h2 {
    font-family: var(--font-heading);
    font-size: clamp(1.5rem, 3vw, 2rem);
    font-weight: 700;
    color: var(--color-fg);
    margin-bottom: var(--space-2xl);
    border-bottom: 3px solid var(--color-accent-1);
    padding-bottom: var(--space-md);
  }

  .content-section h3 {
    font-family: var(--font-heading);
    font-size: 1.3rem;
    font-weight: 600;
    color: var(--color-gray-800);
    margin: var(--space-xl) 0 var(--space-lg);
  }

  .content-section h4 {
    font-weight: 600;
    color: var(--color-gray-800);
    margin: var(--space-lg) 0 var(--space-md);
    font-size: 1.1rem;
  }

  .company-card {
    background: linear-gradient(135deg, var(--color-gray-25), var(--color-accent-4));
    border: 1px solid var(--color-gray-200);
    border-radius: var(--radius-xl);
    padding: var(--space-2xl);
    margin-bottom: var(--space-2xl);
  }

  .company-header {
    text-align: center;
    margin-bottom: var(--space-xl);
    border-bottom: 2px solid var(--color-accent-1);
    padding-bottom: var(--space-lg);
  }

  .company-header h3 {
    font-family: var(--font-heading);
    font-size: 1.8rem;
    font-weight: 700;
    color: var(--color-fg);
    margin: 0 0 var(--space-sm);
  }

  .company-status {
    display: inline-block;
    background: var(--color-accent-1);
    color: white;
    padding: var(--space-xs) var(--space-md);
    border-radius: var(--radius-full);
    font-size: 0.9rem;
    font-weight: 500;
  }

  .detail-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: var(--space-lg);
  }

  .detail-item {
    padding: var(--space-md);
    background: rgba(255, 255, 255, 0.8);
    border-radius: var(--radius-lg);
    border: 1px solid var(--color-gray-200);
  }

  .detail-item strong {
    display: block;
    color: var(--color-accent-1);
    font-weight: 600;
    margin-bottom: var(--space-xs);
  }

  .detail-item p {
    margin: 0;
    color: var(--color-gray-700);
    line-height: 1.5;
  }

  .management-info {
    margin-top: var(--space-xl);
  }

  .management-card {
    background: var(--color-gray-50);
    border: 1px solid var(--color-gray-200);
    border-radius: var(--radius-lg);
    padding: var(--space-lg);
  }

  .management-card p {
    margin: var(--space-sm) 0;
    color: var(--color-gray-700);
    line-height: 1.5;
  }

  .contact-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--space-lg);
    margin-bottom: var(--space-2xl);
  }

  .contact-card {
    background: linear-gradient(135deg, white, var(--color-gray-25));
    border: 1px solid var(--color-gray-200);
    border-radius: var(--radius-lg);
    padding: var(--space-lg);
    transition: all 0.3s ease;
  }

  .contact-card:hover {
    border-color: var(--color-accent-1);
    box-shadow: var(--shadow-soft);
    transform: translateY(-2px);
  }

  .contact-card h4 {
    font-size: 1.1rem;
    margin: 0 0 var(--space-md);
    color: var(--color-fg);
    display: flex;
    align-items: center;
    gap: var(--space-sm);
  }

  .contact-card p {
    margin: var(--space-xs) 0;
    color: var(--color-gray-700);
    line-height: 1.5;
  }

  .contact-card strong {
    color: var(--color-accent-1);
    font-weight: 600;
  }

  .contact-card a {
    color: var(--color-accent-1);
    text-decoration: none;
    font-weight: 500;
  }

  .contact-card a:hover {
    text-decoration: underline;
  }

  .response-times {
    background: var(--color-accent-1-light);
    border: 1px solid var(--color-accent-1);
    border-radius: var(--radius-lg);
    padding: var(--space-lg);
  }

  .response-times h4 {
    color: var(--color-accent-1);
    margin: 0 0 var(--space-md);
  }

  .response-times ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .response-times li {
    padding: var(--space-sm) 0;
    color: var(--color-gray-700);
    border-bottom: 1px solid var(--color-accent-2);
  }

  .response-times li:last-child {
    border-bottom: none;
  }

  .hosting-card {
    background: linear-gradient(135deg, var(--color-gray-25), var(--color-accent-4));
    border: 1px solid var(--color-gray-200);
    border-radius: var(--radius-lg);
    padding: var(--space-xl);
  }

  .host-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: var(--space-lg);
    padding-bottom: var(--space-md);
    border-bottom: 2px solid var(--color-accent-1);
  }

  .host-header h4 {
    margin: 0;
    font-size: 1.3rem;
    color: var(--color-fg);
  }

  .host-location {
    background: var(--color-accent-1);
    color: white;
    padding: var(--space-xs) var(--space-sm);
    border-radius: var(--radius-full);
    font-size: 0.85rem;
    font-weight: 500;
  }

  .host-details p {
    margin: var(--space-sm) 0;
    color: var(--color-gray-700);
    line-height: 1.5;
  }

  .host-details strong {
    color: var(--color-accent-1);
    font-weight: 600;
  }

  .host-details a {
    color: var(--color-accent-1);
    text-decoration: none;
    font-weight: 500;
  }

  .host-details a:hover {
    text-decoration: underline;
  }

  .ip-section ul {
    list-style: none;
    padding: 0;
  }

  .ip-section li {
    padding: var(--space-sm) 0;
    border-bottom: 1px solid var(--color-gray-200);
  }

  .ip-section li:last-child {
    border-bottom: none;
  }

  .ip-section strong {
    color: var(--color-accent-1);
    font-weight: 600;
  }

  .legal-framework {
    background: var(--color-gray-50);
    border: 1px solid var(--color-gray-200);
    border-radius: var(--radius-lg);
    padding: var(--space-lg);
  }

  .legal-framework p {
    margin: var(--space-sm) 0;
    color: var(--color-gray-700);
    line-height: 1.5;
  }

  .legal-framework strong {
    color: var(--color-accent-1);
    font-weight: 600;
  }

  .legal-framework a {
    color: var(--color-accent-1);
    text-decoration: none;
    font-weight: 500;
  }

  .legal-framework a:hover {
    text-decoration: underline;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .legal-page {
      padding-top: 60px;
    }

    .page-header {
      padding: var(--space-2xl) 0;
    }

    .content-section {
      padding: var(--space-2xl) var(--space-lg);
    }

    .detail-grid {
      grid-template-columns: 1fr;
    }

    .contact-grid {
      grid-template-columns: 1fr;
    }

    .host-header {
      flex-direction: column;
      align-items: flex-start;
      gap: var(--space-sm);
    }
  }

  /* Print Styles */
  @media print {
    .legal-page {
      padding-top: 0;
    }

    .content-section {
      break-inside: avoid;
      box-shadow: none;
      border: 1px solid #ccc;
    }

    .contact-card, .hosting-card, .management-card {
      break-inside: avoid;
    }
  }
</style>