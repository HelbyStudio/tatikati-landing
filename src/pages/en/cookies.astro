---
import BaseLayout from '../../layouts/BaseLayout.astro';
import NavBar from '../../components/NavBar.astro';
import Footer from '../../components/Footer.astro';
import { useTranslations } from '../../i18n/utils.js';

const t = useTranslations('en');

const title = 'Cookie Policy - Tatikati';
const description = 'Cookie usage policy and tracking technologies information for Tatikati website and application.';
---

<BaseLayout 
  title={title}
  description={description}
  locale="en"
>
  <NavBar locale="en" />
  
  <main id="main" class="cookies-page">
    <div class="container">
      <div class="cookies-content">
        <header class="page-header">
          <h1 class="page-title">Cookie Policy</h1>
          <p class="page-description">
            Information about how we use cookies and similar tracking technologies on our website.
          </p>
          <p class="last-updated">
            <strong>Last updated:</strong> December 15, 2024
          </p>
        </header>

        <div class="cookies-sections">
          <!-- What Are Cookies -->
          <section class="cookies-section">
            <h2>1. What Are Cookies?</h2>
            <p>
              Cookies are small text files that are stored on your device (computer, tablet, or mobile phone) when you visit a website. They help websites remember information about your visit and preferences, making your browsing experience more efficient and personalized.
            </p>
            <p>
              Cookies cannot access, read, or modify any other data on your computer. They are not programs and cannot carry viruses or malware.
            </p>
          </section>

          <!-- How We Use Cookies -->
          <section class="cookies-section">
            <h2>2. How We Use Cookies</h2>
            <p>
              We use cookies and similar technologies to:
            </p>
            <ul>
              <li>Enable essential website functionality</li>
              <li>Remember your preferences and settings</li>
              <li>Analyze website traffic and usage patterns</li>
              <li>Improve our services and user experience</li>
              <li>Provide relevant content and advertisements</li>
              <li>Ensure website security and prevent fraud</li>
            </ul>
          </section>

          <!-- Types of Cookies -->
          <section class="cookies-section">
            <h2>3. Types of Cookies We Use</h2>
            
            <h3>Essential Cookies</h3>
            <p>
              These cookies are necessary for the website to function properly and cannot be disabled. They include:
            </p>
            <ul>
              <li><strong>Session Cookies:</strong> Maintain your session while browsing</li>
              <li><strong>Security Cookies:</strong> Protect against fraud and security threats</li>
              <li><strong>Load Balancing Cookies:</strong> Distribute traffic across servers</li>
              <li><strong>CSRF Tokens:</strong> Prevent cross-site request forgery attacks</li>
            </ul>

            <h3>Preference Cookies</h3>
            <p>
              These cookies remember your choices and preferences:
            </p>
            <ul>
              <li><strong>Language Settings:</strong> Remember your preferred language</li>
              <li><strong>Theme Preferences:</strong> Store your display preferences</li>
              <li><strong>Accessibility Options:</strong> Remember accessibility settings</li>
              <li><strong>Cookie Consent:</strong> Store your cookie preferences</li>
            </ul>

            <h3>Analytics Cookies</h3>
            <p>
              These cookies help us understand how visitors use our website:
            </p>
            <ul>
              <li><strong>Google Analytics:</strong> Track website usage and performance</li>
              <li><strong>Heatmap Analytics:</strong> Understand user behavior patterns</li>
              <li><strong>Performance Monitoring:</strong> Track page load times and errors</li>
              <li><strong>A/B Testing:</strong> Test different versions of website features</li>
            </ul>

            <h3>Marketing Cookies</h3>
            <p>
              These cookies are used to deliver relevant advertisements (only with your consent):
            </p>
            <ul>
              <li><strong>Advertising Networks:</strong> Show relevant ads across the internet</li>
              <li><strong>Social Media Pixels:</strong> Track social media campaign effectiveness</li>
              <li><strong>Retargeting:</strong> Show ads to previous website visitors</li>
              <li><strong>Conversion Tracking:</strong> Measure advertising campaign success</li>
            </ul>
          </section>

          <!-- Third-Party Cookies -->
          <section class="cookies-section">
            <h2>4. Third-Party Cookies</h2>
            <p>
              Some cookies are set by third-party services we use on our website:
            </p>

            <h3>Google Services</h3>
            <ul>
              <li><strong>Google Analytics:</strong> Website analytics and reporting</li>
              <li><strong>Google Fonts:</strong> Web font delivery service</li>
              <li><strong>Google Maps:</strong> Interactive maps and location services</li>
              <li><strong>Google reCAPTCHA:</strong> Spam and abuse prevention</li>
            </ul>

            <h3>Social Media</h3>
            <ul>
              <li><strong>Facebook Pixel:</strong> Social media advertising and analytics</li>
              <li><strong>Twitter Analytics:</strong> Social media engagement tracking</li>
              <li><strong>LinkedIn Insight:</strong> Professional network advertising</li>
              <li><strong>Instagram Integration:</strong> Social media content embedding</li>
            </ul>

            <h3>Other Services</h3>
            <ul>
              <li><strong>Newsletter Platform:</strong> Email subscription management</li>
              <li><strong>Customer Support:</strong> Help desk and chat services</li>
              <li><strong>CDN Services:</strong> Content delivery and performance optimization</li>
              <li><strong>Security Services:</strong> DDoS protection and security monitoring</li>
            </ul>
          </section>

          <!-- Cookie Duration -->
          <section class="cookies-section">
            <h2>5. Cookie Duration</h2>
            
            <h3>Session Cookies</h3>
            <p>
              These cookies are temporary and are deleted when you close your browser. They are used for essential website functionality and security.
            </p>

            <h3>Persistent Cookies</h3>
            <p>
              These cookies remain on your device for a specified period or until you delete them manually:
            </p>
            <ul>
              <li><strong>Short-term (1-30 days):</strong> Preference settings, temporary authentication</li>
              <li><strong>Medium-term (1-12 months):</strong> Analytics data, user preferences</li>
              <li><strong>Long-term (1-2 years):</strong> Remember me settings, long-term analytics</li>
            </ul>
          </section>

          <!-- Managing Cookies -->
          <section class="cookies-section">
            <h2>6. Managing Your Cookie Preferences</h2>
            
            <h3>Cookie Consent Banner</h3>
            <p>
              When you first visit our website, you'll see a cookie consent banner where you can:
            </p>
            <ul>
              <li>Accept all cookies</li>
              <li>Reject non-essential cookies</li>
              <li>Customize your cookie preferences by category</li>
              <li>View detailed information about each cookie type</li>
            </ul>

            <h3>Browser Settings</h3>
            <p>
              You can manage cookies through your browser settings:
            </p>
            <ul>
              <li><strong>Chrome:</strong> Settings > Privacy and Security > Cookies</li>
              <li><strong>Firefox:</strong> Settings > Privacy & Security > Cookies and Site Data</li>
              <li><strong>Safari:</strong> Preferences > Privacy > Manage Website Data</li>
              <li><strong>Edge:</strong> Settings > Site Permissions > Cookies</li>
            </ul>

            <h3>Opt-Out Links</h3>
            <p>
              For specific services, you can opt out directly:
            </p>
            <ul>
              <li><strong>Google Analytics:</strong> <a href="https://tools.google.com/dlpage/gaoptout" target="_blank" rel="noopener noreferrer">Google Analytics Opt-out</a></li>
              <li><strong>Facebook:</strong> <a href="https://www.facebook.com/settings?tab=ads" target="_blank" rel="noopener noreferrer">Facebook Ad Preferences</a></li>
              <li><strong>Digital Advertising Alliance:</strong> <a href="http://optout.aboutads.info/" target="_blank" rel="noopener noreferrer">Industry Opt-out</a></li>
            </ul>
          </section>

          <!-- Impact of Disabling Cookies -->
          <section class="cookies-section">
            <h2>7. Impact of Disabling Cookies</h2>
            <p>
              Disabling certain cookies may affect your website experience:
            </p>

            <h3>Essential Cookies</h3>
            <p>
              If you disable essential cookies, you may experience:
            </p>
            <ul>
              <li>Login issues and security problems</li>
              <li>Loss of shopping cart contents</li>
              <li>Inability to access certain features</li>
              <li>Repeated requests for information</li>
            </ul>

            <h3>Non-Essential Cookies</h3>
            <p>
              Disabling non-essential cookies may result in:
            </p>
            <ul>
              <li>Loss of personalized content and recommendations</li>
              <li>Need to re-enter preferences repeatedly</li>
              <li>Less relevant advertising</li>
              <li>Limited website performance analytics</li>
            </ul>
          </section>

          <!-- Mobile App Tracking -->
          <section class="cookies-section">
            <h2>8. Mobile App Tracking</h2>
            <p>
              Our mobile app may use similar tracking technologies:
            </p>

            <h3>App Analytics</h3>
            <ul>
              <li><strong>Firebase Analytics:</strong> App usage and performance tracking</li>
              <li><strong>Crashlytics:</strong> Crash reporting and stability monitoring</li>
              <li><strong>Performance Monitoring:</strong> App performance optimization</li>
            </ul>

            <h3>Device Identifiers</h3>
            <ul>
              <li><strong>Advertising ID:</strong> Device-specific advertising identifier</li>
              <li><strong>Installation ID:</strong> Unique app installation identifier</li>
              <li><strong>Push Notification Tokens:</strong> For sending notifications</li>
            </ul>

            <h3>Managing App Tracking</h3>
            <ul>
              <li><strong>iOS:</strong> Settings > Privacy & Security > Tracking</li>
              <li><strong>Android:</strong> Settings > Privacy > Ads</li>
              <li><strong>App Settings:</strong> Privacy controls within the Tatikati app</li>
            </ul>
          </section>

          <!-- Children's Privacy -->
          <section class="cookies-section">
            <h2>9. Children's Privacy and Cookies</h2>
            <p>
              We take special care with cookies when children are involved:
            </p>
            <ul>
              <li>We do not use behavioral advertising cookies for children under 13</li>
              <li>Analytics cookies for child profiles are anonymized</li>
              <li>Parents can control cookie settings for their children's accounts</li>
              <li>We comply with COPPA requirements for children's online privacy</li>
              <li>Child-specific features use minimal tracking</li>
            </ul>
          </section>

          <!-- Updates to Cookie Policy -->
          <section class="cookies-section">
            <h2>10. Updates to This Cookie Policy</h2>
            <p>
              We may update this Cookie Policy from time to time to reflect:
            </p>
            <ul>
              <li>Changes in cookie usage or technology</li>
              <li>New features or services</li>
              <li>Legal and regulatory requirements</li>
              <li>Industry best practices</li>
            </ul>
            <p>
              We will notify you of significant changes through:
            </p>
            <ul>
              <li>Updated cookie consent banner</li>
              <li>Email notifications to registered users</li>
              <li>Website announcements</li>
              <li>Updated version date at the top of this policy</li>
            </ul>
          </section>

          <!-- Contact Information -->
          <section class="cookies-section">
            <h2>11. Contact Information</h2>
            <p>
              If you have questions about our Cookie Policy or how we use cookies, please contact us:
            </p>
            <div class="contact-info">
              <p><strong>Email:</strong> <a href="mailto:privacy@tatikati.app">privacy@tatikati.app</a></p>
              <p><strong>Cookie Questions:</strong> <a href="mailto:cookies@tatikati.app">cookies@tatikati.app</a></p>
              <p><strong>Address:</strong><br>
                HELBY - Privacy Department<br>
                123 Example Street<br>
                75001 Paris, France
              </p>
              <p><strong>Phone:</strong> +33 1 23 45 67 89</p>
            </div>
          </section>

          <!-- Additional Resources -->
          <section class="cookies-section">
            <h2>12. Additional Resources</h2>
            <p>
              For more information about cookies and online privacy, visit:
            </p>
            <ul>
              <li><strong>About Cookies:</strong> <a href="https://www.aboutcookies.org" target="_blank" rel="noopener noreferrer">aboutcookies.org</a></li>
              <li><strong>Your Online Choices:</strong> <a href="https://www.youronlinechoices.com" target="_blank" rel="noopener noreferrer">youronlinechoices.com</a></li>
              <li><strong>CNIL (French Authority):</strong> <a href="https://www.cnil.fr" target="_blank" rel="noopener noreferrer">cnil.fr</a></li>
              <li><strong>ICO (UK Authority):</strong> <a href="https://ico.org.uk" target="_blank" rel="noopener noreferrer">ico.org.uk</a></li>
            </ul>
          </section>

        </div>
      </div>
    </div>
  </main>

  <Footer locale="en" />
</BaseLayout>

<style>
  .cookies-page {
    padding: 120px 0 80px;
    min-height: 80vh;
    background: var(--color-bg);
  }

  .cookies-content {
    max-width: 800px;
    margin: 0 auto;
  }

  .page-header {
    text-align: center;
    margin-bottom: 4rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid var(--color-border);
  }

  .page-title {
    font-family: var(--font-heading);
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 700;
    color: var(--color-fg);
    margin-bottom: 1rem;
  }

  .page-description {
    font-size: 1.125rem;
    color: var(--color-gray-600);
    line-height: 1.6;
    margin-bottom: 1rem;
  }

  .last-updated {
    font-size: 0.95rem;
    color: var(--color-gray-500);
  }

  .cookies-sections {
    display: flex;
    flex-direction: column;
    gap: 3rem;
  }

  .cookies-section {
    background: var(--color-bg-secondary);
    border-radius: 16px;
    padding: 2rem;
    border: 1px solid var(--color-border);
  }

  .cookies-section h2 {
    font-family: var(--font-heading);
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-fg);
    margin-bottom: 1.5rem;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid var(--color-accent-1);
  }

  .cookies-section h3 {
    font-family: var(--font-heading);
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-fg);
    margin-bottom: 1rem;
    margin-top: 1.5rem;
  }

  .cookies-section h3:first-of-type {
    margin-top: 0;
  }

  .cookies-section p {
    color: var(--color-gray-700);
    line-height: 1.7;
    margin-bottom: 1rem;
  }

  .cookies-section p:last-child {
    margin-bottom: 0;
  }

  .cookies-section ul {
    color: var(--color-gray-700);
    line-height: 1.7;
    padding-left: 1.5rem;
    margin-bottom: 1rem;
  }

  .cookies-section li {
    margin-bottom: 0.5rem;
  }

  .cookies-section a {
    color: var(--color-accent-1);
    text-decoration: underline;
    transition: color 0.2s ease;
  }

  .cookies-section a:hover {
    color: var(--color-accent-2);
  }

  .contact-info {
    background: var(--color-bg);
    padding: 1.5rem;
    border-radius: 12px;
    border: 1px solid var(--color-border);
    margin-top: 1rem;
  }

  .contact-info p {
    margin-bottom: 0.5rem;
  }

  .contact-info p:last-child {
    margin-bottom: 0;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .cookies-page {
      padding: 100px 0 60px;
    }

    .cookies-section {
      padding: 1.5rem;
    }

    .cookies-section h2 {
      font-size: 1.25rem;
    }

    .cookies-section h3 {
      font-size: 1.125rem;
    }

    .contact-info {
      padding: 1rem;
    }
  }

  /* High Contrast Mode */
  @media (prefers-contrast: high) {
    .cookies-section {
      border-width: 2px;
    }

    .contact-info {
      border-width: 2px;
    }
  }

  /* Print Styles */
  @media print {
    .cookies-page {
      padding: 0;
    }

    .cookies-section {
      break-inside: avoid;
      box-shadow: none;
      border: 1px solid #000;
    }

    .cookies-section h2 {
      color: #000;
    }

    .cookies-section a {
      color: #000;
      text-decoration: underline;
    }
  }
</style>