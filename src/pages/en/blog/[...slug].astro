---
import { getCollection } from 'astro:content';
import BlogLayout from '../../../layouts/BlogLayout.astro';

export async function getStaticPaths() {
  const blogEntries = await getCollection('blog', ({ data, slug }) => {
    // Only get English posts
    return !data.draft && slug.startsWith('en/');
  });
  
  return blogEntries.map(entry => ({
    params: { slug: entry.slug.replace('en/', '') }, // Remove 'en/' prefix from slug
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
---

<BlogLayout post={entry} locale="en">
  <Content />
</BlogLayout>