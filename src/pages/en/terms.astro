              <p><strong>Email:</strong> <a href="mailto:legal@tatikati.app">legal@tatikati.app</a></p>
              <p><strong>Address:</strong><br>
                HELBY<br>
                123 Example Street<br>
                75001 Paris, France
              </p>
              <p><strong>Phone:</strong> +33 1 23 45 67 89</p>
            </div>
          </section>

        </div>
      </div>
    </div>
  </main>

  <Footer locale="en" />
</BaseLayout>

<style>
  .terms-page {
    padding: 120px 0 80px;
    min-height: 80vh;
    background: var(--color-bg);
  }

  .terms-content {
    max-width: 800px;
    margin: 0 auto;
  }

  .page-header {
    text-align: center;
    margin-bottom: 4rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid var(--color-border);
  }

  .page-title {
    font-family: var(--font-heading);
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 700;
    color: var(--color-fg);
    margin-bottom: 1rem;
  }

  .page-description {
    font-size: 1.125rem;
    color: var(--color-gray-600);
    line-height: 1.6;
    margin-bottom: 1rem;
  }

  .last-updated {
    font-size: 0.95rem;
    color: var(--color-gray-500);
  }

  .terms-sections {
    display: flex;
    flex-direction: column;
    gap: 3rem;
  }

  .terms-section {
    background: var(--color-bg-secondary);
    border-radius: 16px;
    padding: 2rem;
    border: 1px solid var(--color-border);
  }

  .terms-section h2 {
    font-family: var(--font-heading);
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-fg);
    margin-bottom: 1.5rem;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid var(--color-accent-1);
  }

  .terms-section h3 {
    font-family: var(--font-heading);
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-fg);
    margin-bottom: 1rem;
    margin-top: 1.5rem;
  }

  .terms-section h3:first-of-type {
    margin-top: 0;
  }

  .terms-section p {
    color: var(--color-gray-700);
    line-height: 1.7;
    margin-bottom: 1rem;
  }

  .terms-section p:last-child {
    margin-bottom: 0;
  }

  .terms-section ul {
    color: var(--color-gray-700);
    line-height: 1.7;
    padding-left: 1.5rem;
    margin-bottom: 1rem;
  }

  .terms-section li {
    margin-bottom: 0.5rem;
  }

  .terms-section a {
    color: var(--color-accent-1);
    text-decoration: underline;
    transition: color 0.2s ease;
  }

  .terms-section a:hover {
    color: var(--color-accent-2);
  }

  .contact-info {
    background: var(--color-bg);
    padding: 1.5rem;
    border-radius: 12px;
    border: 1px solid var(--color-border);
    margin-top: 1rem;
  }

  .contact-info p {
    margin-bottom: 0.5rem;
  }

  .contact-info p:last-child {
    margin-bottom: 0;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .terms-page {
      padding: 100px 0 60px;
    }

    .terms-section {
      padding: 1.5rem;
    }

    .terms-section h2 {
      font-size: 1.25rem;
    }

    .terms-section h3 {
      font-size: 1.125rem;
    }

    .contact-info {
      padding: 1rem;
    }
  }

  /* High Contrast Mode */
  @media (prefers-contrast: high) {
    .terms-section {
      border-width: 2px;
    }

    .contact-info {
      border-width: 2px;
    }
  }

  /* Print Styles */
  @media print {
    .terms-page {
      padding: 0;
    }

    .terms-section {
      break-inside: avoid;
      box-shadow: none;
      border: 1px solid #000;
    }

    .terms-section h2 {
      color: #000;
    }

    .terms-section a {
      color: #000;
      text-decoration: underline;
    }
  }
</style>