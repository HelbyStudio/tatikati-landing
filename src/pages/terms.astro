    progressBar.id = 'reading-progress';
    progressBar.style.cssText = `
      position: fixed;
      top: 0;
      left: 0;
      width: 0%;
      height: 3px;
      background: var(--color-accent-2);
      z-index: 1001;
      transition: width 0.1s ease;
    `;
